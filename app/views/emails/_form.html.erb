<%= form_for(@email) do |f| %>
  <% if @email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
      <% @email.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email_domain %>:<%= @email.email_domain %><br>
  </div>

  <div class="field">
    <%= f.label "This domain was contacted" %>:<%= @email.email_frequency.to_s + " times"%><br>
  </div>
  <div class="field">
    <%= f.label "time period" %>:<%= @email.month.to_s %> / <%=@email.year%><br>
  </div>

  <div class="field">
    <%= f.label "cluster" %>: <%=@email.cluster.cluster_name%> <br>
  </div>

  <div class="field">
    <%= f.label :bridge %><br>
    <%= f.text_field :bridge %>
  </div>
  <div class="field">
    <%= f.label :bridge_global %><br>
    <%= f.text_field :bridge_global %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
